/*
 * macOS-inspired stylesheet for the Soccer Betting Analysis Tool
 * Uses San Francisco font and macOS color scheme
 */

/* Application-wide settings */
* {
    font-family: -apple-system, BlinkMacSystemFont, "SF Pro Text", "Helvetica Neue", Arial, sans-serif;
    font-size: 13px;
    color: #000000;
}

/* QMainWindow */
QMainWindow {
    background-color: #f5f5f5;
}

/* QWidget (general) */
QWidget {
    background-color: #ffffff;
    color: #000000;
}

/* QPushButton */
QPushButton {
    background-color: #007AFF;
    color: #ffffff;
    border: none;
    border-radius: 6px;
    padding: 8px 16px;
    font-size: 13px;
    font-weight: 500;
    min-width: 80px;
}

QPushButton:hover {
    background-color: #0051D5;
}

QPushButton:pressed {
    background-color: #0041B8;
}

QPushButton:disabled {
    background-color: #c5c5c5;
    color: #8e8e93;
}

/* Secondary button style (for Browse button) */
QPushButton[text="浏览..."] {
    background-color: #e5e5e5;
    color: #000000;
}

QPushButton[text="浏览..."]:hover {
    background-color: #d5d5d5;
}

/* QLineEdit */
QLineEdit {
    background-color: #ffffff;
    border: 1px solid #c5c5c5;
    border-radius: 6px;
    padding: 6px 8px;
    selection-background-color: #007AFF;
}

QLineEdit:focus {
    border: 1px solid #007AFF;
}

/* QSpinBox */
QSpinBox {
    background-color: #ffffff;
    border: 1px solid #c5c5c5;
    border-radius: 6px;
    padding: 4px 8px;
}

QSpinBox:focus {
    border: 1px solid #007AFF;
}

QSpinBox::up-button, QSpinBox::down-button {
    background-color: #f5f5f5;
    border: none;
    width: 20px;
}

QSpinBox::up-button:hover, QSpinBox::down-button:hover {
    background-color: #e5e5e5;
}

/* QCheckBox */
QCheckBox {
    spacing: 8px;
}

QCheckBox::indicator {
    width: 18px;
    height: 18px;
    border: 1px solid #c5c5c5;
    border-radius: 4px;
    background-color: #ffffff;
}

QCheckBox::indicator:hover {
    border: 1px solid #007AFF;
}

QCheckBox::indicator:checked {
    background-color: #007AFF;
    border: 1px solid #007AFF;
    image: url(data:image/svg+xml;base64,);
}

/* QLabel */
QLabel {
    color: #000000;
    font-size: 13px;
}

/* QTableView */
QTableView {
    background-color: #ffffff;
    alternate-background-color: #f9f9f9;
    gridline-color: #e5e5e5;
    border: 1px solid #c5c5c5;
    border-radius: 6px;
    selection-background-color: #007AFF;
    selection-color: #ffffff;
}

QTableView::item {
    padding: 6px;
    border: none;
}

QTableView::item:selected {
    background-color: #007AFF;
    color: #ffffff;
}

/* QHeaderView (table headers) */
QHeaderView::section {
    background-color: #f5f5f5;
    color: #000000;
    padding: 8px;
    border: none;
    border-right: 1px solid #e5e5e5;
    border-bottom: 1px solid #e5e5e5;
    font-weight: 600;
    font-size: 12px;
}

QHeaderView::section:first {
    border-top-left-radius: 6px;
}

QHeaderView::section:last {
    border-top-right-radius: 6px;
    border-right: none;
}

/* QScrollBar */
QScrollBar:vertical {
    background-color: #f5f5f5;
    width: 12px;
    margin: 0px;
    border-radius: 6px;
}

QScrollBar::handle:vertical {
    background-color: #c5c5c5;
    min-height: 30px;
    border-radius: 6px;
    margin: 2px;
}

QScrollBar::handle:vertical:hover {
    background-color: #a5a5a5;
}

QScrollBar::add-line:vertical, QScrollBar::sub-line:vertical {
    height: 0px;
}

QScrollBar:horizontal {
    background-color: #f5f5f5;
    height: 12px;
    margin: 0px;
    border-radius: 6px;
}

QScrollBar::handle:horizontal {
    background-color: #c5c5c5;
    min-width: 30px;
    border-radius: 6px;
    margin: 2px;
}

QScrollBar::handle:horizontal:hover {
    background-color: #a5a5a5;
}

QScrollBar::add-line:horizontal, QScrollBar::sub-line:horizontal {
    width: 0px;
}

/* QProgressBar */
QProgressBar {
    background-color: #e5e5e5;
    border: none;
    border-radius: 4px;
    height: 8px;
    text-align: center;
}

QProgressBar::chunk {
    background-color: #007AFF;
    border-radius: 4px;
}

/* QStatusBar */
QStatusBar {
    background-color: #f5f5f5;
    border-top: 1px solid #e5e5e5;
    color: #8e8e93;
    font-size: 12px;
}

/* QMenuBar */
QMenuBar {
    background-color: #f5f5f5;
    border-bottom: 1px solid #e5e5e5;
}

QMenuBar::item {
    background-color: transparent;
    padding: 8px 12px;
    border-radius: 4px;
}

QMenuBar::item:selected {
    background-color: #007AFF;
    color: #ffffff;
}

QMenuBar::item:pressed {
    background-color: #0051D5;
}

/* QMenu */
QMenu {
    background-color: #ffffff;
    border: 1px solid #c5c5c5;
    border-radius: 6px;
    padding: 4px;
}

QMenu::item {
    padding: 8px 24px;
    border-radius: 4px;
}

QMenu::item:selected {
    background-color: #007AFF;
    color: #ffffff;
}

QMenu::separator {
    height: 1px;
    background-color: #e5e5e5;
    margin: 4px 8px;
}

/* QDialog */
QDialog {
    background-color: #ffffff;
}

/* QSplitter */
QSplitter::handle {
    background-color: #e5e5e5;
}

QSplitter::handle:hover {
    background-color: #c5c5c5;
}

QSplitter::handle:horizontal {
    width: 1px;
}

QSplitter::handle:vertical {
    height: 1px;
}
